# FreeIPA MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: FreeIPA server hostname (without https://)
FREEIPA_SERVER=ipa.example.com

# Required: Admin username for authentication
FREEIPA_USERNAME=admin

# Required: Admin password for authentication
FREEIPA_PASSWORD=your-password-here

# Optional: Verify SSL certificates (default: true)
# Set to false for self-signed certificates (not recommended for production)
FREEIPA_VERIFY_SSL=true

# Optional: Path to CA certificate file for SSL verification
# FREEIPA_CA_CERT_PATH=/etc/ipa/ca.crt

# Optional: FreeIPA API version (default: 2.230)
# Minimum supported version for FreeIPA 4.6.5
FREEIPA_API_VERSION=2.230

# Optional: Default limit for list operations (default: 100)
FREEIPA_DEFAULT_LIMIT=100

# Optional: Request timeout in seconds (default: 30)
FREEIPA_REQUEST_TIMEOUT=30
